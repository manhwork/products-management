include ../../mixins/alert-error.pug
include ../../mixins/alert-success.pug
link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css")

+alert-error(2000)
+alert-success(2000)

.container
    .row.justify-content-center.mt-5
        .col-6
            .card
                .card-header
                    h1 Đăng kí tài khoản
                .card-body
                    form(action=`/user/register`, method="post")
                        div.form-group
                            label(for="fullName") Họ và tên:
                            input.form-control(type="text" id="fullName" name="fullName" placeholder="Nhập tên" required)
                        div.form-group
                            label(for="email") Email:
                            input.form-control(type="text" id="email" name="email" placeholder="Nhập email" required)
                        div.form-group
                            label(for="password") Password:
                            input.form-control(type="password" id="password" name="password" placeholder="Nhập mật khẩu" required)
                        button.btn.btn-primary(type="submit" class="mt-2") Đăng kí
                    div.mt-3
                        a(href="/user/login") Đăng nhập
                        br
                        a(href="/user/password/forgot") Quên mật khẩu
                        br 
                        a(href="/") Trang chủ 
