extends ../../layouts/default.pug
include ../../mixins/alert-error.pug
include ../../mixins/alert-success.pug

block main 

    h1(class="mb-4") product.title 

    div(class="mb-4") Giá 
        b #{product.price}$

    div(class="mb-4") Giảm giá :
        b #{product.discountPercentage}%

    div(class="mb-4") Số lượng :
        b #{product.stock }

    div(class="mb-4") Thumbnail : 
        img(src=`${product.thumbnail}`, alt="", srcset="", style = "width : 100px")

    div(class='mb-4') Trạng thái : 
        if(product.status='active')
            span(class="badge badge-success") Hoạt động 
        else 
            span(class="badge badge-danger") Dừng hoạt động


    div(class="mb-4") Vị trí : 
        b #{product.position} 

    div(class="mb-4") Mô tả : !{product.description}
    //- !{} là để ko hiển thị code 

    a(
        href=`${prefixAdmin}/products/edit/${product.id}`
        class="btn btn-warning"
    ) Chỉnh sửa