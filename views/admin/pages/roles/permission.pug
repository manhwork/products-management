extends ../../layouts/default.pug
include ../../mixins/alert-success.pug
include ../../mixins/alert-error.pug

block main 
    +alert-success(5000)
    +alert-error(5000)

    h1(class="mb-4") Phân quyền

    div(
        class="d-none"
        data-records=records
    ) 

    div(class="text-right")
        button(
            type="submit"
            class="btn btn-primary mb-3"
            button-submit
        ) Cập nhật
    table(
        class="table table-hover"
        table-permissions
    )
        thead
            tr 
                th Tính năng 
                each item in records
                    th(class="text-center") #{item.title}
        tbody 
            tr(data-name="id" class="d-none") 
                td data   
                each item in records  
                    td(class="text-center")
                        input(type="text" value=item.id)           
            tr 
                td(colspan=4) 
                    b Danh mục sản phẩm  
            tr(data-name="products-category_view")
                td Xem 
                each item in records 
                    td(class="text-center") 
                        //- - const check = item.permissions.indexOf("products-category_view") !== -1 ;
                        //- - const check = item.permissions.includes("products-category_view") ;
                        input(
                            type="checkbox"
                            checked= check
                        )
            tr(data-name="products-category_create")
                td Thêm mới 
                each item in records 
                    td(class="text-center") 
                        input(type="checkbox")
            tr(data-name="products-category_edit")
                td Chỉnh sửa 
                each item in records 
                    td(class="text-center") 
                        input(type="checkbox")
            tr(data-name="products-category_delete")
                td Xoá 
                each item in records 
                    td(class="text-center") 
                        input(type="checkbox")
    form(
        action=`${prefixAdmin}/roles/permission?_method=PATCH` 
        method="POST"
        id="form-change-permission"
        class="d-none"
    )   
        div(class="form-group")
            input(
                type="text"
                class="form-control"
                name="permissions"
            )
    script(src="/admin/js/roles.js") 

                