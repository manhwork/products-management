extends ../../layouts/default.pug
include ../../mixins/alert-error.pug
include ../../mixins/alert-success.pug
include ../../mixins/select.pug


block main 

    +alert-error(5000)
    +alert-success(5000)
    h1(class="mb-4") Sửa tài khoản

    form(
        action=`${prefixAdmin}/my-account/edit?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    ) 
        div(class="form-group")
            label(for="fullName") <strong>Họ tên*</strong>
            input(
                type="text"
                name="fullName"
                id="fullName"
                class="form-control"
                placeholder="Họ tên"
                required
                value=user.fullName
            )              
        div(class="form-group")
            label(for="email")  <strong>Email *</strong>
            input(
                type="email"
                name="email"
                id="email"
                class="form-control"
                placeholder="Email"
                required
                value=user.email
            ) 
        div(class="form-group")
            label(for="password")  <strong>Password *</strong>
            input(
                type="password"
                name="password"
                id="password"
                class="form-control"
            ) 
        div(class="form-group")
            label(for="phone")  <strong>Phone *</strong>
            input(
                type="text"
                name="phone"
                id="phone"
                class="form-control"
                placeholder="Phone"
                required
                value=user.phone
            ) 
        div(class="form-group" upload-image)
            label(for="avatar") Avatar
            input(type="file" name="avatar" class="form-control-file" id="avatar" accept="image/*" upload-image-input)
            img(src=user.avatar width=100 height=100  class="image-preview" upload-image-preview)             

        div(class="form-group")
            button(
                class="btn btn-primary"
                type="submit"
            ) Cập nhật  

    script(src="/admin/js/script.js") 