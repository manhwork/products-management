mixin select(records,level = 1, parent_id = "" )
    each item in records 
        - const prefix = Array(level + 1).join("-- ");
        option(
            value=item.id 
            selected = (item.id == parent_id ? true : false)
        ) #{prefix}#{item.title}
        if(item.childrent && item.childrent.length > 0)
            +select(item.childrent, level + 1, parent_id)
